                                    <file>${basedir}/target/generated-resources/schemagen/model.xsd</file>
                                    <replacements>
                                        <replacement>
                                            <token>xs:</token>
                                            <value>xsd:</value>
                                        </replacement>
                                    </replacements>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                </plugins>
            </build>
